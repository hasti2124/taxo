<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login2">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#E4E3E3"
      android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2B3034"
        android:orientation="vertical">

      <FrameLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/shape"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="taxo"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="160dp"/>

      </FrameLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Phone number"
          android:textSize="15dp"
          android:textStyle="bold"
          android:textColor="@color/white"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="60dp"/>

      <LinearLayout
          android:layout_width="380dp"
          android:layout_height="50dp"
          android:layout_gravity="center"
          android:background="@drawable/h1"
          android:orientation="horizontal"
          android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+7"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="11dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 456 78 90"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:textColor="#545B63"
            android:textSize="18dp"/>

      </LinearLayout>

      <LinearLayout
          android:layout_width="380dp"
          android:layout_height="100dp"
          android:layout_marginTop="100dp"
          android:background="@drawable/h1"
          android:layout_gravity="center"
          android:elevation="10dp">

        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="To complete the registration enter your phone number to which you will receive an SMS with a code"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textColor="#545B63"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/h3"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:elevation="10dp"
            android:src="@drawable/back1"/>

      </LinearLayout>

    </LinearLayout>

  </LinearLayout>

  </LinearLayout>